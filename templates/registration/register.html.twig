{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<h1 class="text-center text-secondary my-4">Créez votre compte</h1>
	<div class="container-fluid my-4">
		{{ form_start(registrationForm) }}
		<div class="login border rounded-2 border-secondary bg-light shadow text-primary">
			<h3 class="text-center mt-3 mb-4">Remplissez les champs</h3>
			<div class="my-3 col-10 m-auto text-primary">
				{{ form_row(registrationForm.lastName, {
            label: 'Nom' }) }}
			</div>
			<div class="my-3 col-10 m-auto text-primary">
				{{ form_row(registrationForm.firstName, {
            label: 'Prénom' }) }}
			</div>
			<div class="my-3 col-10 m-auto text-primary">
				{{ form_row(registrationForm.email) }}
			</div>
			<div class="my-3 col-10 m-auto text-primary">
				{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe' }) }}
			</div>
			<div class="my-3 col-10 m-auto">
				<button type="submit" class="btn btn-primary text-secondary my-3">Valider</button>
			</div>
		</div>
		{{ form_end(registrationForm) }}
	</div>
	{% block footer %}{% endblock %}
{% endblock %}
