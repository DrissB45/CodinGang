{% extends 'base.html.twig' %}

{% block title %}Réservations
{% endblock %}

{% block body %}
	<h2 class="text-center text-secondary mt-5 fs-1">Vos réservations</h2>
	<div class="login border rounded-2 border-secondary bg-light shadow mx-2">
		{% if app.user.hasReserved == true %}
			<h1 class="text-center">Détails :</h1>
			<div class="mx-2">
				<p>Véhicule réservé :
					{{reservation.car.marque}}</p>
				<p>Date de début :
					{{reservation.date|date('d-m-Y')}}</p>
				<p>Date de fin :
					{{reservation.datedefin|date('d-m-Y')}}</p>
				{{ include('reservation/_delete_form.html.twig') }}
			</div>
			<img src="{{ asset('build/images/rolls.jpg') }}" class="img card-img-top object-fit-none" alt="Voiture réservée">
		</div>
	{% else %}
		<h2>Vous n'avez aucune réservation en cours.</h2>
		{% endif %}
		<div class="d-flex justify-content-center">
			<a class="btn btn-secondary btn-lg mt-5" href="{{ path("vehicule_index") }}">Retourner au catalogue</a>
		</div>
	{% endblock %}
