{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}
	<h1 class="text-center text-secondary mt-5">Se connecter</h1>
	<div class="container">
		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<div class="login border rounded-2 border-secondary bg-light shadow mx-2">
			<form class="d-flex flex-column" action="{{ path('app_login') }}" method="post">
				<div class="my-3 col-10 m-auto">
					<label for="username" class="form-label fw-normal text-black">Adresse email :</label>
					<input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}">
				</div>
				<div class="my-3 col-10 m-auto">
					<label for="password" class="form-label fw-normal text-black">Mot de passe :</label>
					<input type="password" class="form-control" id="password" name="_password">
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<input type="hidden" name="_target_path" value="#">

				<button type="submit" class="btn btn-primary btn-lg m-auto mb-5 mt-3">Se connecter</button>
			</form>
			<div class="text-center mb-3">
				<div class="my-2 fw-normal text-black">Vous n'avez pas de compte ?</div>
				<a class="btn btn-outline-primary" href="{{ path('app_register')}}">S'inscrire</a>
			</div>
		</div>
	</div>
	{% block footer %}{% endblock %}
{% endblock %}
