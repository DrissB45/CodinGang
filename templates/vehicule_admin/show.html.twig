{% extends 'base.html.twig' %}

{% block title %}Admin - Fiche du véhicule{% endblock %}

{% block header %}
{% include 'components/_headerAdmin.html.twig' %}
{% endblock %}

{% block body %}
    <h1>Fiche du véhicule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicule.id }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ vehicule.marque }}</td>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ vehicule.volume }}</td>
            </tr>
            <tr>
                <th>Carburant</th>
                <td>{{ vehicule.carburant }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ vehicule.image }}</td>
            </tr>
            <tr>
                <th>Annee</th>
                <td>{{ vehicule.annee }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ vehicule.etat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_vehicule_admin_index') }}" class="text-white">Retour aux véhicules</a>

    <a href="{{ path('app_vehicule_admin_edit', {'id': vehicule.id}) }}" class="text-white">Éditer</a>

    {{ include('vehicule_admin/_delete_form.html.twig') }}
{% endblock %}
