{% extends 'base.html.twig' %}

{% block title %}Vehicule index{% endblock %}

{% block body %}
    <h1>Vehicule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Volume</th>
                <th>Carburant</th>
                <th>Image</th>
                <th>Annee</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicule in vehicules %}
            <tr>
                <td>{{ vehicule.id }}</td>
                <td>{{ vehicule.marque }}</td>
                <td>{{ vehicule.volume }}</td>
                <td>{{ vehicule.carburant }}</td>
                <td>{{ vehicule.image }}</td>
                <td>{{ vehicule.annee }}</td>
                <td>{{ vehicule.etat }}</td>
                <td>
                    <a href="{{ path('app_vehicule_admin_show', {'id': vehicule.id}) }}">show</a>
                    <a href="{{ path('app_vehicule_admin_edit', {'id': vehicule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vehicule_admin_new') }}">Create new</a>
{% endblock %}
